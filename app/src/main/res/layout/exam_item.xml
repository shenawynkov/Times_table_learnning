<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="60dp">

    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exam" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textColor="@android:color/white"
            android:textSize="20sp" android:padding="6dp"/>
    <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toTopOf="@+id/tv_exam" app:layout_constraintBottom_toBottomOf="@+id/tv_exam"
            tools:text="answer her" android:textAllCaps="true" android:inputType="phone"
            app:layout_constraintVertical_bias="0.444"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/myRed"
            android:shadowColor="@color/blue2" android:hint="ans"
            app:layout_constraintStart_toEndOf="@+id/tv_exam" android:background="@android:color/white"
            android:padding="4dp" android:gravity="center" android:textColorHint="@color/white_gray"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/checkBox" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText" app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintVertical_bias="0.49"
            android:visibility="invisible" tools:text="@string/inCorrect" android:gravity="start"
            android:textColor="@android:color/white" android:textColorLink="@color/myRed"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view2"
            android:background="@color/white_gray"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/checkBox"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>